<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="todo">
	<!--/*resultType은 row 하나당 뭐가 담겼는지*/  -->
	<select id="getList" resultType="com.example.spring05.dto.TodoDto">
		SELECT id,content,regdate
		FROM todo
	</select>
	
	<insert id="insert" parameterType="com.example.spring05.dto.TodoDto">
		INSERT INTO todo
		(id,content,regdate)
		VALUES(todo_sequence.NEXTVAL, #{content}, SYSDATE)
	</insert>
	
	<select id="getData" resultType="com.example.spring05.dto.TodoDto" parameterType="int">
		SELECT id,content,regdate
		FROM todo
		WHERE id=#{id}
	</select>
	
	<update id="update" parameterType="com.example.spring05.dto.TodoDto">
		UPDATE todo
		SET content=#{content}
		WHERE id=#{id}
	</update>
	
	<delete id="delete" parameterType="int">
	DELETE FROM todo
	WHERE id=#{id}
	</delete>
</mapper>